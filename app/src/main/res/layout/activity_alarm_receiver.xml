<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#282828"
    tools:context=".ui.activities.AlarmActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="10">
            <TextView
                android:id="@+id/alarm_note_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#f9236c"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:textAlignment="center"
                android:textSize="28sp"/>
            <ImageView
                android:id="@+id/alarm_note_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="20dp"
                android:contentDescription="@string/alarm_image_description" />
            <TextView
                android:id="@+id/alarm_note_body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:paddingTop="8dp"
                android:textColor="#fff"
                android:fontFamily="serif"
                android:textSize="20sp"
                android:textAlignment="center"/>


            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="4dp">
                    <Button
                        android:id="@+id/alarm_cancel_button"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/alarm_cancel_button"
                        android:text="@string/cancel_alarm_button"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:textColor="#fff"
                        android:textSize="20sp"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/path"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="40dp"
                            android:src="@mipmap/right_arrow"
                            />
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="40dp"
                            android:src="@mipmap/right_arrow"/>
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="40dp"
                            android:src="@mipmap/right_arrow"/>
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="40dp"
                            android:src="@mipmap/right_arrow"/>
                    </LinearLayout>

                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/target"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/background_target">

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
